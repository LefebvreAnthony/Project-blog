{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <main class=" text-gray-50 ">
        <div class="my-5 mx-auto flex flex-col w-3/4 md:w-1/4 2xl:w-1/3 ">
            <h1 class="text-center my-5">Sign Up</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {'attr': {'class': 'w-full text-primary p-1'} }) }}
                {{ form_row(registrationForm.plainPassword) }}
                <button type="submit" class="block mx-auto py-2 px-3 btn border border-gray-50 rounded-md hover:text-primary hover:bg-gray-50 ">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </main>
{% endblock %}
